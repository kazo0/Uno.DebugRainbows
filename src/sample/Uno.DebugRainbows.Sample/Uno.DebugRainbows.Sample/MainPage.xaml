<Page x:Class="Uno.DebugRainbows.Sample.MainPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.DebugRainbows.Sample"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Page.Resources>
		<Style x:Key="ToggleButtonNavItemStyle"
			   TargetType="ToggleButton"
			   BasedOn="{StaticResource DefaultToggleButtonStyle}">
			<Setter Property="CornerRadius"
					Value="0" />
			<Setter Property="BorderThickness"
					Value="0" />
			<Setter Property="VerticalAlignment"
					Value="Stretch" />
			<Setter Property="HorizontalAlignment"
					Value="Stretch" />
		</Style>
	</Page.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Frame x:Name="ShellFrame" />
		<Grid Grid.Row="1"
			  x:Name="BottomNavGrid"
			  BorderThickness="0,1,0,0"
			  BorderBrush="Gray">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<ToggleButton Style="{StaticResource ToggleButtonNavItemStyle}"
						  Tag="Rainbows"
						  Checked="OnRainbowsChecked"
						  Unchecked="ToggleButton_Unchecked"
						  IsChecked="True"
						  Content="Rainbows">
				<ToggleButton.ContentTemplate>
					<DataTemplate>
						<StackPanel>
							<FontIcon HorizontalAlignment="Center"
									  FontFamily="{StaticResource FontAwesomeSolid}"
									  Glyph="&#xF75B;" />
							<TextBlock Text="{Binding}" />
						</StackPanel>
					</DataTemplate>

				</ToggleButton.ContentTemplate>
			</ToggleButton>
			<ToggleButton Style="{StaticResource ToggleButtonNavItemStyle}"
						  Grid.Column="1"
						   Tag="Grid"
						  Checked="OnGridChecked"
						  Unchecked="ToggleButton_Unchecked"
						  Content="Grid">
				<ToggleButton.ContentTemplate>
					<DataTemplate>
						<StackPanel>
							<FontIcon HorizontalAlignment="Center"
									  FontFamily="{StaticResource FontAwesomeSolid}"
									  Glyph="&#xf84c;" />
							<TextBlock Text="{Binding}" />
						</StackPanel>
					</DataTemplate>

				</ToggleButton.ContentTemplate>
			</ToggleButton>
			<ToggleButton Style="{StaticResource ToggleButtonNavItemStyle}"
						   Tag="InverseGrid"
						  Grid.Column="2"
						  Checked="OnInverseGridChecked"
						  Unchecked="ToggleButton_Unchecked"
						  Content="Inverse">
				<ToggleButton.ContentTemplate>
					<DataTemplate>
						<StackPanel>
							<FontIcon HorizontalAlignment="Center"
									  FontFamily="{StaticResource FontAwesomeSolid}"
									  Glyph="&#xf58d;" />
							<TextBlock Text="{Binding}" />
						</StackPanel>
					</DataTemplate>

				</ToggleButton.ContentTemplate>
			</ToggleButton>
			<ToggleButton Style="{StaticResource ToggleButtonNavItemStyle}"
						  Grid.Column="3"
						  Tag="Tomato"
						  Checked="OnTomatoChecked"
						  Unchecked="ToggleButton_Unchecked"
						  Content="Tomato">
				<ToggleButton.ContentTemplate>
					<DataTemplate>
						<StackPanel>
							<FontIcon HorizontalAlignment="Center"
									  FontFamily="{StaticResource FontAwesomeSolid}"
									  Glyph="&#xf5d1;" />
							<TextBlock Text="{Binding}" />
						</StackPanel>
					</DataTemplate>

				</ToggleButton.ContentTemplate>
			</ToggleButton>
		</Grid>
	</Grid>
</Page>